@model LojaNet.Models.Cliente

@{
    ViewBag.Title = "Detalhes";
}

<h2>Dados do Cliente</h2>

<dl>
    <dt>Nome:</dt>
    <dd>@Model.Nome</dd>

    <dt>Email:</dt>
    <dd>@Model.Email</dd>

    <dt>Telefone:</dt>
    <dd>@Model.Telefone</dd>

</dl>

<div>
    <hr />
    <a href="/Cliente/Index" class="btn btn-light">Voltar</a>
    <a href="/Cliente/Alterar/@Model.Id" class="btn btn-light" color="yellow">Alterar</a>
    <a href="/Cliente/Excluir/@Model.Id" class="btn btn-light" color="red">Excluir</a>
</div>
