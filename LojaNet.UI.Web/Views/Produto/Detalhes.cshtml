@model LojaNet.Models.Produto

@{
    ViewBag.Title = "Detalhes";
}

<h2>Dados do Produto</h2>

<dl>
    <dt>Nome:</dt>
    <dd>@Model.Nome</dd>

    <dt>Preço:</dt>
    <dd>@Model.Preco</dd>

    <dt>Estoque:</dt>
    <dd>@Model.Estoque</dd>

</dl>

<div>
    <hr />

    <a href="/Produto/Index" class="btn btn-light">Voltar</a>
    <a href="/Produto/Alterar/@Model.Id" class="btn btn-light">Alterar</a>
    <a href="/Produto/Excluir/@Model.Id" class="btn btn-light">Excluir</a>
</div>

