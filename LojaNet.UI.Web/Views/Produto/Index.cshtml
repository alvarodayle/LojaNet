@model IEnumerable<LojaNet.Models.Produto>

@{
    ViewBag.Title = "Produtos";
}

<h2>Produtos</h2>

<p>
    <a class="btn btn-light" href="/Produto/Incluir">Novo</a>
</p>

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Preco</th>
        <th>Estoque</th>
    </tr>

    @foreach (var produto in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(produto.Nome, "Detalhes", new { id = produto.Id })
            </td>

            <td>@produto.Preco.ToString("c")</td>

            <td>@produto.Estoque.ToString()</td>
        </tr>
    }

</table>